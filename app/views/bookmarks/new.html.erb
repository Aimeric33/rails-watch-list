<h1 class="mt-3 mb-3">Ajouter un bookmark</h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.error_notification %>

    <%= f.association :movie %>
    <%= f.input :comment %>

    <%= f.button :submit, class: "btn-primary" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  <% end %>
