<div class="container mt-5">
  <h1 class="mb-3">Mes listes</h1>

  <div class="cards mt-5">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @list.cover_image.key, crop: :fill %>)">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>
