<div class="container mt-5">
  <h1 class="mb-3">Mes listes</h1>

  <div class="cards mt-5">
    <% @lists.each do |list| %>
      <% if list.cover_image.key? %>
          <div class="parent" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.cover_image.key, crop: :fill %>)">
          <div class="card-category" >
            <%= link_to list.name, list_path(list), class: "list-name" %>
            <%= link_to '<i class="fa-solid fa-square-minus"></i>'.html_safe, list_path(list), data: {turbo_method: :delete, turbo_confirm: "Voulez-vous vraiment supprimer cette liste ?"} %>
          </div>
          </div>
      <% end %>
    <% end %>
  </div>
</div>
