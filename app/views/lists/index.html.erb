<div class="container mt-5">
  <h1 class="mb-3">Mes listes</h1>

  <div class="cards mt-5">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1485846234645-a62644f84728?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1459&q=80)">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>
